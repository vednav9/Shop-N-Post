# Frontend Environment Variables

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_VERSION=v1

# Authentication
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id

# Payment Gateways
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
REACT_APP_RAZORPAY_KEY_ID=your-razorpay-key-id

# App Configuration
REACT_APP_NAME=Shop-N-Post
REACT_APP_DESCRIPTION=Modern e-commerce platform with integrated scraping and blogging
REACT_APP_URL=http://localhost:3000

# SEO
REACT_APP_DEFAULT_IMAGE=https://your-domain.com/og-image.jpg
REACT_APP_TWITTER_HANDLE=@shopnpost

# Features Flags
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CHAT=false

# Third-party Services
REACT_APP_CLOUDINARY_CLOUD_NAME=your-cloud-name
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXX-X

# Development
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# Cache
REACT_APP_CACHE_TIMEOUT=300000

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=12
REACT_APP_MAX_PAGE_SIZE=100

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,webp
