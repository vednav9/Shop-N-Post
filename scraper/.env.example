# Scraper Environment Variables

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/shop-n-post
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Scraper Configuration
SCRAPER_DELAY=1
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2

# User Agents
USE_RANDOM_USER_AGENT=true
CUSTOM_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Proxy Configuration
USE_PROXY=false
PROXY_LIST=
ROTATE_PROXY=false

# Selenium Configuration
USE_SELENIUM=false
CHROME_DRIVER_PATH=
HEADLESS_MODE=true
WINDOW_SIZE=1920,1080

# Target Websites
SCRAPE_AMAZON=true
SCRAPE_FLIPKART=true
SCRAPE_EBAY=false
SCRAPE_ETSY=false

# Data Processing
CLEAN_DATA=true
NORMALIZE_PRICES=true
REMOVE_DUPLICATES=true
MIN_PRICE=1
MAX_PRICE=999999

# Scheduling
ENABLE_SCHEDULER=true
SCRAPE_INTERVAL_HOURS=24
CLEANUP_INTERVAL_DAYS=7

# File Storage
DATA_DIRECTORY=./data
BACKUP_DIRECTORY=./backups
LOG_DIRECTORY=./logs

# Image Processing
DOWNLOAD_IMAGES=true
IMAGE_QUALITY=80
MAX_IMAGE_SIZE=1024
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_ROTATION=true
MAX_LOG_SIZE=10MB
BACKUP_COUNT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8080
HEALTH_CHECK_PORT=8081

# Rate Limiting
REQUESTS_PER_MINUTE=60
BURST_LIMIT=10

# Error Handling
CONTINUE_ON_ERROR=true
SAVE_FAILED_URLS=true
MAX_ERRORS_PER_SITE=100

# Data Quality
MIN_DESCRIPTION_LENGTH=50
REQUIRED_FIELDS=name,price,description
VALIDATE_IMAGES=true
CHECK_STOCK_STATUS=true

# API Integration
BACKEND_API_URL=http://localhost:5000/api
API_KEY=your-api-key-here
SYNC_INTERVAL_MINUTES=30

# Development
DEBUG=false
VERBOSE=false
DRY_RUN=false
SAVE_RAW_HTML=false
